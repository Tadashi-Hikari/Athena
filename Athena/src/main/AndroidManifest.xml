<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.carrolltech.athena">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <queries>
        <intent>
            <action android:name="action.athena.skill.INITIALIZE" />
        </intent>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Athena">
        <activity
            android:name=".sapphire_ui.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Athena.NoActionBar" />
        <activity
            android:name=".sapphire_ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Athena.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.ASSIST" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".sapphire_nlp.ProcessorService"
            android:process=":ProcessorCentralService"
            android:exported="true"/>
        <service
            android:name=".sapphire_nlp.ProcessorTrainingService"
            android:process=":ProcessorTrainingService" />
        <service
            android:name=".sapphire_nlp.ProcessorEntityTrainingService"
            android:process=":ProcessorEntityTrainingService" />
        <service
            android:name=".sapphire_core.CoreService"
            android:exported="true" />
        <service
            android:name=".android_stt_service.AthenaVoiceInteractionService"
            android:exported="true"
            android:permission="android.permission.BIND_VOICE_INTERACTION">
            <meta-data
                android:name="android.voice_interaction"
                android:resource="@xml/interaction_service">
            </meta-data>
            <intent-filter>
                <action android:name="android.service.voice.VoiceInteractionService" />
            </intent-filter>
        </service>
        <service
            android:name=".android_stt_service.AthenaVoiceInteractionSessionService"
            android:permission="android.permission.BIND_VOICE_INTERACTION"
            android:process=":SessionService" />
        <service android:name=".android_stt_service.AthenaRecognitionService">
            <meta-data
                android:name="android.speech"
                android:resource="@xml/recognition_service" />

            <intent-filter>
                <action android:name="android.speech.RecognitionService" />
            </intent-filter>
        </service>

        <!--
This bullshit. Android restricts the TTS to a single thread, which kills the TensorflowTTS
        By moving it to its own process, I isolate it from the rest of the app, then send an intent to
        the actual TTS service
        -->
        <service
            android:name=".android_tts_service.tts.AthenaTextToSpeechService"
            android:exported="true"
            android:process=":ttsProxy">
            <intent-filter>
                <action android:name="android.intent.action.TTS_SERVICE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.speech.tts"
                android:resource="@xml/tts_engine" />
        </service>
        <service
            android:name=".android_tts_service.tts.AthenaActualTextToSpeechService"
            android:exported="true" />
        <service
            android:name=".sapphire_core.CorePersistentMemory"
            android:exported="true" />
    </application>

</manifest>